<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal|top">
        <Button
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:id="@+id/productPage" android:text="Produits"/>
        <Button
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:id="@+id/cartPage" android:text="Panier"/>
        <Button
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:text="Logout"
                android:id="@+id/logout" android:layout_gravity="center_horizontal|right"/>
    </LinearLayout>
    <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/productsList" android:layout_gravity="center_horizontal"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payer"
            android:id="@+id/pay" android:layout_gravity="center_horizontal"/>

</LinearLayout>