<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="top">
        <Button
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:id="@+id/productPage"
                android:text="@string/products_activity"
                android:textSize="12dp"
                android:drawableLeft="@drawable/product" android:singleLine="false"
                />
        <Button
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:id="@+id/cartPage"
                android:text="@string/cart_activity"
                android:textSize="12dp"
                android:drawableLeft="@drawable/cart"/>/>
        <Button
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="Logout"
                android:id="@+id/logout"
                android:textSize="12dp"
                android:drawableLeft="@drawable/logout"/>
    </LinearLayout>
    <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/productsList" android:layout_gravity="center_horizontal"/>

</LinearLayout>