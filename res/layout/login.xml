<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:gravity="center_vertical">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Connexion"
            android:id="@+id/textView" android:layout_gravity="center_horizontal" android:paddingBottom="50dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Login"
            android:ems="10"
            android:id="@+id/login" android:layout_gravity="center_horizontal">
    <requestFocus />
    </EditText>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password" android:layout_gravity="center_horizontal" android:text="password"/>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="82dp" android:gravity="center|top">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connexion"
                android:id="@+id/connect" android:singleLine="false"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inscription"
                android:id="@+id/register" android:clickable="true"/>
    </LinearLayout>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:id="@+id/test" android:layout_gravity="center_horizontal"/>
</LinearLayout>